<section class="section" id="section-{{ section.id }}">
  <div class="container">
     <div class="quiz-results__wrapper">
        <div class="quiz-results__content">
          <div class="quiz-results__header">
            <p class="">{{ section.settings.result_subtitle }}</p>
            <h4 class="heading h5">{{ section.settings.title }}</h4>
          </div>

          <h5 class="heading h6">{{ section.settings.subtitle }}</h5>
          {% render 'icon' with 'divider-green' %}
          {{ section.settings.text }}

          <div class="quiz-results__list">
            <h5 class="heading h6">{{ section.settings.list_title }}</h5>
            {% render 'icon' with 'divider-green' %}
            {%- if section.settings.list_text != blank-%}
               {{ section.settings.list_text }}
            {%- endif -%}

            {%- for block in section.blocks -%}
              <div class="quiz__result">
                 <h4 class="heading h5">{{ forloop.index }}.&nbsp;{{ block.settings.title }}</h4>
                 {%- if block.settings.text != blank -%}
                   {{ block.settings.text }}
                 {%- endif -%}
                 {% assign product = block.settings.product %}
                 {%- if product != blank -%}
                    {%- render 'product-item-result', product: product, show_cta: true, sizes_attribute: sizes_attribute -%}
                 {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
        </div>
        <div class="quiz-results__cta">
           <h4 class="heading h6 align-center">{{ section.settings.cta_title }}</h4>
           {% assign product = section.settings.cta_product %}
           {% assign result_image = section.settings.result_image %}
           {%- if product != blank -%}
              {%- render 'product-item-routine-result', product: product, show_cta: true, sizes_attribute: sizes_attribute , result_image: result_image -%}
           {%- endif -%}
        </div>
     </div>
  </div>
</section>
<style>
    #section-{{ section.id }} .quiz-results__details{
       background-color: {{ section.settings.bg_color }};
     }
</style>
{% schema %}
{
  "name": "Quiz Results",
  "settings": [
        {
          "type": "text",
          "id": "result_subtitle",
          "label": "Subtitle",
          "default": "VOTRE ROUTINE SOMATOLINE EST ..."
        },
       {
